{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.Diagnostics.ExceptionHandlerMiddleware": "Critical",
      "Microsoft.AspNetCore.HttpLogging.HttpLoggingMiddleware": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "JwtSettings": {
    "SaveToken": true,
    "TokenValidationParameters": {
      "ValidateAudience": true,
      "ValidateIssuer": true,
      "ValidAudience": "http://localhost:5064",
      "ValidIssuer": "http://localhost:5064"
    }
  },
  "SecurityKey": "The super mega ultra secret json web token key",
  "UseInMemoryDatabase": false,
  "ConnectionStrings": {
    "PostgreSQL": "Host=localhost;Port=5432;Database=WebChat;Username=webchat;Password=webchat"
  },
  "FileStore": {
    "BasePath": "E:/Tmp/Data"
  },
  "SystemInfo": {
    "Version": "1.0.0",
    "AppName": "Web Chat",
    "MaxFileSize": 0.5,
    "MaxFileCountPerMessage": 5
  }
}
